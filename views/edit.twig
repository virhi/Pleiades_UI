{% extends "layout.twig" %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        {% for item in menu %}
            {% if item.name == title %}
                <li><a href="{{ item.url }}">{{ item.name }}</a></li>
            {% endif %}
        {% endfor %}
    </ol>
{% endblock %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">{{ title | title }}</div>
        <div class="panel-body">
            {% for object in body %}
                <form class="form-horizontal" role="form" method="post" action="{{ urlForm }}">
                    {% for fieldName, field in fields %}
                        {% if field.key is defined and field.key == true %}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="{{ fieldName }}">{{ fieldName }} :</label>
                                <div class="col-sm-10">
                                    <input type="{{ field.type }}" readonly name="{{ fieldName }}" class="form-control" id="{{ fieldName }}" placeholder="{{ attribute(object, fieldName) }}" value="{{ attribute(object, fieldName) }}">
                                </div>
                            </div>
                        {% else %}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="{{ fieldName }}">{{ fieldName }} :</label>
                                <div class="col-sm-10">
                                    <input type="{{ field.type }}" name="{{ fieldName }}" class="form-control" id="{{ fieldName }}" placeholder="{{ attribute(object, fieldName) }}" value="{{ attribute(object, fieldName) }}">
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <div class="form-group text-right">
                        <div class="col-sm-8">
                        </div>
                        <div class="col-sm-4 ">
                            <a href="{{ [settings.viewItemUrl, objectName,'/',object.id]|join }}" class="btn btn-default">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            {% endfor %}
        </div>
    </div>

{% endblock %}