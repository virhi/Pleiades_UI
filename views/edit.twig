{% extends "layout.twig" %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">{{ title | title }}</div>
        <div class="panel-body">
            {% for object in body %}
                <form class="form-horizontal" role="form" method="post">
                    {% for fieldName, field in fields %}
                        {% if field.list %}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="{{ fieldName }}">{{ fieldName }} :</label>
                                <div class="col-sm-10">
                                    <input type="{{ field.type }}" class="form-control" id="{{ fieldName }}" placeholder="{{ attribute(object, fieldName) }}" value="{{ attribute(object, fieldName) }}">
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <div class="form-group text-right">
                        <div class="col-sm-8">
                        </div>
                        <div class="col-sm-4 ">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </div>
                    </div>
                </form>
            {% endfor %}
        </div>
    </div>

{% endblock %}