{% extends "layout.twig" %}

{% block content %}

    {% for object in list %}
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                    <fieldset disabled>
                        {% for fieldName, field in squelette.model.fields %}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="{{ fieldName }}">{{ fieldName }} :</label>
                                <div class="col-sm-10">
                                    <input type="{{ field.type }}" class="form-control" id="{{ fieldName }}" placeholder="{{ attribute(object, fieldName) }}" value="{{ attribute(object, fieldName) }}">
                                </div>
                            </div>
                        {% endfor %}
                    </fieldset>
                </form>
            </div>
        </div>
    {% endfor %}

{% endblock %}